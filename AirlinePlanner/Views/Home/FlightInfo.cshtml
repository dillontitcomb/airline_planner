<!DOCTYPE html>
<html>
  <head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" />
    <link rel="stylesheet" type="text/css" href="~/css/styles.css" />
    <title>Airline Planner</title>
  </head>
  <body>
    <div class="container">
      <div class="jumbotron">
        <h1>Flight Details</h1>
        <h4><em>Administrator View</em></h4>
			</div>
        @if(Model!=null)
        {
          <h1>To, From:</h1>
          foreach (var city in Model.GetCities())
          {
          <h1>@city.GetName()</h1>
          }
        }
				<h5><strong><a href="/">Home</a></strong> | <strong><a href="/cities/add">Add City</a></strong></h5>
    </div>
  </body>
</html>
